<!--
    anropas från view List i Admin

    "at-symbol"  anger början på C#-kod
    model anger vilken klass eller viewModel som beskriver innehållet

    partial view för product-klassen
    anropas med hjälp av TagHelpers från annan html-kod
-->
@model Product
<!-- Model med stor bokstav här                                       -->
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="~/Images/carousel3.jpg" alt="">
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <!-- tag-helpers för klickbar länk till detaljsida           -->
                <!-- asp-controller = klassnamn                              -->
                <!-- asp-action = action-metod i controller                  -->
                <!-- asp-route-id = tredje delen i route-anropet (startup.cs) -->
                <a asp-controller="Admin" asp-action="Edit"
                   asp-route-id="@Model.Id">
                    @Model.Name
                </a>
            </h3>
        </div>
    </div>
</div>
